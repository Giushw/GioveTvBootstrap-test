<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Accedi o registrati</h4>
      </div>
      <div class="modal-body">


          <form class="form-horizontal"><!--.form registrazione -->
            <div class="form-group"><!--.form-group nome -->
              <label for="fldNome" class="col-sm-2 control-label">Nome</label>
              <div class="col-sm-10 ">
                <input type="text" class="form-control " id="fldNome" placeholder="Inserisci il tuo Nome">
              </div>
            </div><!--/.form-group nome -->

            <div class="form-group"><!--.form-group cognome -->
              <label for="fldCognome" class="col-sm-2 control-label">Cognome</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="fldCognome" placeholder="Inserisci il tuo Cognome">
              </div>
            </div><!--/.form-group cognome -->

            <div class="form-group"><!--.form-group email -->
              <label for="fldEmail" class="col-sm-2 control-label">Email</label>
              <div class="col-sm-10">
                <input type="email" id="fldEmail" class="form-control" id="inputEmail3" placeholder="Inserisci la tua email">
              </div>
            </div><!--/.form-group email -->

            <div class="form-group"><!--.form-group psw -->
              <label for="fldPassword" class="col-sm-2 control-label">Password</label>
              <div class="col-sm-10">
                <input type="password" id="fldPassword" class="form-control" id="inputPassword3" placeholder="Inserisci la password">
              </div>
            </div><!--./form-group psw -->

            <div class="form-group"><!--.form-group select -->
              <div class="col-sm-offset-2 col-sm-10 selectContainer">
               <label for="fldCat">Scegli il tipo di programma che preferisci in assoluto:</label>
                 <select class="form-control" id="fldCat" name="selectFavCat" class="required">
                  <option value="" > -- </option>
                  <option id="optDocumentari" value="Documentari">Documentari</option>
                  <option id="optFilm" value="Film">Film</option>
                  <option id="optSport" value="Sport">Sport</option>
                  <option id="optSerieTv" value="Serie TV">Serie TV</option>
                </select>
              </div>
            </div><!--/.form-group select -->

            <div class="form-group"><!--.form-group submit -->
              <div class="col-sm-offset-2 col-sm-10">
                <button id="btnInviaDati" type="submit" class="btn btn-default">Registrati</button>
              </div>
            </div><!--.form-group submit -->
          </form><!--/.form registrazione -->


      </div>
      <!--<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Chiudi</button>
        <button type="button" class="btn btn-success">Login</button>
      </div>-->
    </div>
  </div>
</div>
